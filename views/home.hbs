

    <!-- Banner -->
    <section class="bg-warning text-center text-white py-5" style="background-color: #DA521E !important;">
      <div class="container">
        <h1 class="display-4 fw-bold">Selamat Datang di Bunnies Bakery!</h1>
        <p class="lead">Roti, kue, dan donat lezat langsung ke tangan Anda.</p>
      </div>
    </section>

    <!-- Produk Unggulan -->
    <section class="container py-5">
      <h2 class="mb-4 text-center" style="color: #DA521E;">Produk Unggulan</h2>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each featured}}
          <div class="col">
            <div class="card h-100 shadow">
              <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Rp {{this.price}}</p>
              </div>
              <div class="card-footer text-center">
                <a href="/products/{{this.id}}" class="btn btn-sm text-white" style="background-color: #DA1E48;">Lihat Detail</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>

    <!-- Kategori -->
    <section class="bg-light py-5">
      <div class="container">
        <h2 class="text-center mb-4" style="color: #DA521E;">Jelajahi Kategori</h2>
        <div class="row text-center">
          <div class="col-md-4 mb-3">
            <a href="/catalogue?category=bread" class="text-decoration-none text-dark">
              <div class="card h-100 shadow">
                <div class="card-body">
                  <h5 class="card-title fw-bold">Roti</h5>
                  <p class="card-text">Lembut, segar, dan nikmat.</p>
                </div>
              </div>
            </a>
          </div>
          <div class="col-md-4 mb-3">
            <a href="/catalogue?category=cake" class="text-decoration-none text-dark">
              <div class="card h-100 shadow">
                <div class="card-body">
                  <h5 class="card-title fw-bold">Kue</h5>
                  <p class="card-text">Manis dan menggoda selera.</p>
                </div>
              </div>
            </a>
          </div>
          <div class="col-md-4 mb-3">
            <a href="/catalogue?category=donut" class="text-decoration-none text-dark">
              <div class="card h-100 shadow">
                <div class="card-body">
                  <h5 class="card-title fw-bold">Donat</h5>
                  <p class="card-text">Empuk, beragam topping menarik.</p>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>
