<h2 class="mb-3">Daftar Pembayaran</h2>

  <div class="d-flex gap-2 ms-auto">
    <form method="GET" action="/admin/payments" class="mb-4">
      <div class="d-flex justify-content-center align-items-center gap-2" style="max-width: 500px; margin: auto;">
        <div class="input-group" style="flex: 1;">
          <input
            type="text"
            class="form-control"
            name="id"
            placeholder="Cari ID pembayaran..."
            value="{{filters.id}}"
            aria-label="Cari ID pembayaran"
          />
          <button class="btn btn-secondary fw-bold" type="submit">
            <i class="bi bi-search"></i> Cari
          </button>
        </div>
        {{#if filters.id}}
          <button type="button" class="btn btn-outline-secondary" id="resetSearchBtn">
            <i class="bi bi-x"></i> Hapus Pencarian
          </button>
        {{/if}}
      </div>
    </form>
  </div>

<div class='table-responsive'>
  <table class='table table-bordered table-hover align-middle text-center'>
    <thead class='table-dark'>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'>Transaction ID</th>
        <th scope='col'>Status</th>
        <th scope='col'>Waktu Pembayaran</th>
        <th scope='col'>Jenis</th>
        <th scope='col'>Order ID</th>
        <th scope='col'>Jumlah</th>
        <th scope='col'>Bank</th>
        <th scope='col'>Approval</th>
      </tr>
    </thead>
    <tbody>
      {{#each payments}}
        <tr>
          <th scope='row'>{{increment @index}}</th>
          <td>{{this.transactionId}}</td>
          <td>{{this.transactionStatus}}</td>
          <td>{{this.transactionTime}}</td>
          <td>{{this.paymentType}}</td>
          <td>{{this.order.id}}</td>
          <td>Rp {{this.amount}}</td>
          <td>{{this.bank}}</td>
          <td>{{this.approvalCode}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const resetSearchBtn = document.getElementById('resetSearchBtn');
    if (resetSearchBtn) {
      resetSearchBtn.addEventListener('click', () => {
        window.location.href = '/admin/payments';
      });
    }
  });
</script>